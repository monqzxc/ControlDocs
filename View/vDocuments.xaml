<UserControl x:Class="DocsControl.ViewModel.vmDocuments"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DocsControl.View"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"    
             FontFamily="Century Gothic"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" Height="856" Width="1034">
    <Grid>
        <Grid>
            <Label
            Content="DOCUMENTS"
            Foreground="#008080"
            FontSize="55" Margin="2,0,674,776"/>

            <Label
                Content="Total Documents"
                Foreground="#008080"
                FontSize="14" 
                Height="Auto"
                Margin="731,815,10,10"
                HorizontalContentAlignment="Right"/>
        </Grid>

        <Grid Margin="10,91,10,695">
            <ComboBox
                
                Margin="34,10,642,19" 
                materialDesign:HintAssist.Hint="SUBJECT"  
                IsEditable="True"  
                HorizontalContentAlignment="Left"
                Style="{StaticResource MaterialDesignFloatingHintComboBox}">
                <ComboBoxItem    
                    IsSelected="True" Content="Apple"/>
                <ComboBoxItem Content="Banana"/>
                <ComboBoxItem Content="Pear"/>
                <ComboBoxItem Content="Orange"/>
            </ComboBox>

            <ComboBox
                Margin="411,10,417,19" 
                materialDesign:HintAssist.Hint="DOCUMENT TYPE"  
                IsEditable="True"  
                HorizontalContentAlignment="Left"
                Style="{StaticResource MaterialDesignFloatingHintComboBox}">
                <ComboBoxItem    
                    IsSelected="True" Content="Apple"/>
                <ComboBoxItem Content="Banana"/>
                <ComboBoxItem Content="Pear"/>
                <ComboBoxItem Content="Orange"/>
            </ComboBox>

            <ComboBox
                Margin="631,10,197,19" 
                materialDesign:HintAssist.Hint="CONTROL NUMBER"  
                IsEditable="True"  
                HorizontalContentAlignment="Left"
                Style="{StaticResource MaterialDesignFloatingHintComboBox}">
                <ComboBoxItem    
                    IsSelected="True" Content="Apple"/>
                <ComboBoxItem Content="Banana"/>
                <ComboBoxItem Content="Pear"/>
                <ComboBoxItem Content="Orange"/>
            </ComboBox>

            <DatePicker  
                materialDesign:HintAssist.Hint="DATE ADDED"
                Margin="853,9,33,19"   
                Style="{StaticResource MaterialDesignFloatingHintDatePicker}" Height="42" />
        </Grid>

        <ListView             
            BorderThickness="10"
            Name="lvForSign"
            Margin="10,172,10,61">
            <ListView.View>
                <GridView>
                    <GridView.ColumnHeaderContainerStyle>
                        <Style TargetType="GridViewColumnHeader">
                            <Setter Property="Foreground" Value="#008080"></Setter>
                            <Setter Property="FontWeight" Value="Bold"></Setter>
                            <Setter Property="Width" Value="2000"></Setter>
                            <Setter Property="HorizontalAlignment" Value="Center"/>
                        </Style>
                    </GridView.ColumnHeaderContainerStyle>
                    <GridViewColumn                       
                       Width="200"                        
                       Header="DATE ADDED">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock
                                    Padding="-1"
                                    Margin="8"
                                    Height="30"
                                    TextWrapping="Wrap"                                 
                                    Width="190"        
                                    x:Name="txt"                                    
                                    Text="{Binding Path=OperatingUnit}" 
                                    Foreground="#EC4D37">
                                </TextBlock>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <GridViewColumn                       
                       Width="150"                        
                       Header="DOCUMENT TYPE">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock
                                    Padding="-1"
                                    Margin="8"
                                    Height="30"
                                    TextWrapping="Wrap"                                 
                                    Width="140"        
                                    x:Name="txt"                                    
                                    Text="{Binding Path=OperatingUnit}" 
                                    Foreground="#EC4D37">
                                </TextBlock>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <GridViewColumn                       
                       Width="380"                        
                       Header="SUBJECT">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock
                                    Padding="-1"
                                    Margin="8"
                                    Height="30"
                                    TextWrapping="Wrap"                                 
                                    Width="370"        
                                    x:Name="txt"                                    
                                    Text="{Binding Path=OperatingUnit}" 
                                    Foreground="#EC4D37">
                                </TextBlock>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <GridViewColumn                       
                       Width="280"                        
                       Header="CONTROL NUMBER">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock
                                    Padding="-1"
                                    Margin="8"
                                    Height="30"
                                    TextWrapping="Wrap"                                 
                                    Width="270"        
                                    x:Name="txt"                                    
                                    Text="{Binding Path=OperatingUnit}" 
                                    Foreground="#EC4D37">
                                </TextBlock>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</UserControl>
